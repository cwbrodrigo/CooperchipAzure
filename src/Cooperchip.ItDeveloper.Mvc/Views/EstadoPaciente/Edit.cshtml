@{
    @using Cooperchip.Demo.Domain.Entities;
    @model EstadoPaciente
    ViewData["Title"] = "Editar Estado do Paciente";
}

<partial name="PartialViews/_cabecalho" />

<div class="panel panel-success panel-controls">

    <div class="panel panel-heading">
        <h3>Editar Estado do Paciente</h3>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="EstadoPaciente" asp-action="EditPut" asp-route-id="@Model.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" placeholder="Digite a descrção..." class="form-control" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div class="panel panel-footer">
        <div>
            <a asp-controller="EstadoPaciente" asp-action="Index" class="btn btn-primary">Voltar para Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial", Model);
    }
}