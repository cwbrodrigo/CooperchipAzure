@{
    @using Cooperchip.Demo.Domain.Entities;
    @model EstadoPaciente
    ViewData["Title"] = "Exclusão de Estado do Paciente";
}

<partial name="PartialViews/_cabecalho" />

<div class="panel panel-success panel-controls">

    <div class="panel panel-heading">
        <h3>Exclusão de Estado do Paciente</h3>
    </div>

    <h3>Está certo que deseja remover esse registro?</h3>

    <div class="panel panel-body">
        <dl class="dl-horizontal">
            <dt>
                <label for="@Model.Descricao"></label>
            </dt>
            <dd>
                <label asp-for="Descricao"></label>
            </dd>
        </dl>
        <form asp-controller="EstadoPaciente" asp-action="Delete" asp-route-id="@Model.Id">
            <input type="submit" class="btn btn-danger" value="Deletar" />
            <a class="btn btn-default" asp-controller="EstadoPaciente" asp-action="Index">Voltar para Lista</a>
        </form>
    </div>

</div>