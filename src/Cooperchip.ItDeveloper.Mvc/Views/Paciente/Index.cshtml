@using Cooperchip.Demo.Domain.Entities;
@model IEnumerable<Paciente>

<h3>Gestão de Pacientes</h3>

<div>
    <p>
        Where can I get some?

        There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form,
        by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum
    </p>
</div>

<div class="row">
    <div class="panel panel-body">
        <div class="col-12">
            <div class="row">
                <div class="panel panel-success">
                    <div class="panel panel-heading">
                        <h3>Lista de Pacientes</h3>
                    </div>
                </div>

                <hr />

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id do Paciente</th>
                            <th>Nome do Paciente</th>
                            <th>Cpf</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nome</td>
                                <td>@item.Cpf</td>
                                <td>
                                    <a class="btn btn-success" asp-controller="Paciente" asp-action="DetalhePaciente" asp-route-nome="@item.Nome" title="Detalhes de Pacientes">Detalhe do Paciente</a>
                                    <a class="btn btn-warning" href="javascript:void()" title="Editar Paciente">Editar Paciente</a>
                                    <a class="btn btn-danger" href="javascript:void()" title="Ecluir Paciente">Excluir Paciente</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>